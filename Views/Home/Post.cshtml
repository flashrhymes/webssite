 @using websites.model1;
<!-- Page Header -->
<header class="masthead" style="background-image: url('/Public/img/@ViewBag.Post.Image')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1>@ViewBag.Post.Title</h1>
                    <h2 class="subheading">@ViewBag.Post.Description</h2>
                    <span class="meta">
                        Posted by
                        <a href="#">Start Bootstrap</a>
                        on  @ViewBag.Post.Date.ToString("MMMM dd,yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
               @Html.Raw(ViewBag.Post.Text)
            </div>
        </div>
    </div>
</article>

<hr>